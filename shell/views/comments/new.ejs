<%include ../partials/header %>

<br><br>

<div class="ui main text cotainer segemnt">
  <div class="ui huge header">Add new comment to <%= update.username %></div>
<form class="ui form" action="/update/"+"<%= update.id %>"+"/comments" method="POST">
  <div class="field">
      <label for="inputName">Name</label>
      <input type="text" name="comment[rating]" id="inputName" placeholder="Rating">
  </div>
  
  <div class="field">
    <label for="comment">Comment</label>
      <textarea class="form-control" name="comment[comment]" rows="6" id="comment" placeholder="Enter text here..."></textarea>
  </div>
  
  
  
  
  <div class="field">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Save the changes
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Upload</button>
</form>
</div>
<%include ../partials/footer %>
